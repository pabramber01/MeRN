{
  "version": 2,
  "installCommand": "npm ci",
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/common/static/(.*)",
      "destination": "public/common/$1"
    },
    {
      "source": "/(.*)",
      "destination": "src/app.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://mern-frontend-pabramber01.vercel.app"
        }
      ]
    }
  ]
}
